<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/bitcoinPrimaryBackground</item>
        <item name="colorPrimaryDark">@color/bitcoinSecondaryBackground</item>
        <item name="colorAccent">@color/bitcoinColorBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bitcoinBackgroundColor</item>
    </style>

    <style name="Theme.Bitcoin" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/bitcoinPrimaryTextColor</item>
        <item name="colorControlHighlight">@color/bitcoinBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/bitcoinPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/bitcoinSecondaryTextColor</item>
        <item name="android:background">@color/bitcoinPrimaryBackground</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bitcoinPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
